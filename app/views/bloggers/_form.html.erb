<h1>New Blogger </h1>
<main>
<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
      <li style= "color: red"><%= error %></li>
    <% end %>
    </ul>
  <% end %>


<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :bio %>
    <%= f.text_field :bio %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
<% end %>

</main>